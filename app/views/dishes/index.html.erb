<div class="d-flex align-items-center">
  <h1>料理一覧</h1>
  <div class="ml-auto dishes__linkBox">
    <a href="/dishes/new" class="btn btn-outline-dark">新規作成</a>
  </div>
</div>
<table class="table table-hover dishes__table">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>作成者</th>
      <th>作成日時</th>
      <th>更新日時</th>
    </tr>
  </thead>
  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <th><%= dish.id %></th>
        <th><%= dish.title %></th>
        <th><%= dish.name %></th>
        <th><%= dish.created_at.to_s(:datetime_jp) %></th>
        <th><%= dish.updated_at.to_s(:datetime_jp) %></th>
      </tr>
    <% end %>
  </tbody>
</table>