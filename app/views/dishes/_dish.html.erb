
<div class="card">
  <div class="card-header">
    <h4><%= dish.title %></h4>
    <% dish.tags.each do |tag| %>
      <span class="badge badge-primary"><%= tag.name %></span>
    <% end %>
  </div>
  <div class="card-body">
    <p class="card-text"><%= simple_format(dish.body) %></p>
    <p class="text-right font-weight-bold mr-10"><%= dish.name %></p>
  </div>
</div>