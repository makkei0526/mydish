<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ml-auto boards__linkBox">
    <%= link_to '料理一覧', dishes_path, class: 'btn btn-outline-dark'  %>
    <a href="/dishes" class="btn btn-outline-dark">編集</a>
  </div>
</div>

<div class="card">
  <div class="card-header">
    <h4><%= @dish.title %></h4>
  </div>
  <div class="card-body">
    <p class="card-text"><%= simple_format(@dish.body) %></p>
    <p class="text-right font-weight-bold mr-10"><%= @dish.name %></p>
  </div>
</div>