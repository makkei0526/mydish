<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ml-auto dishes__linkBox">
    <%= link_to '料理一覧', dishes_path, class: 'btn btn-warning'  %>
    <%= link_to '編集', edit_dish_path(@dish), class: 'btn btn-danger' %>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-primary"><%= flash[:notice] %></div>
<% end %>

<%= render @dish %>

<div class="p-comment__list">
  <div class="p-comment__listTitle">コメント</div>
  <%= render @dish.comments %>
</div>

<%= render partial: 'comments/form', locals: { comment: @comment} %>
